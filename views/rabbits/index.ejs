<% layout('layouts/boilerplate')%>

<h1>All RabbitBoards</h1>
<div>
    <a href="/rabbits/new">Add Board</a>
</div>
<% for (let board of boards){%>
<div class="card" mb-3>
    <div class="row">
        <div class="col-md-4">
            <img class="img-fluid" alt="" src="<%=board.image%>">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= board.title %> </h5>
                <p class="card-text"><%= board.description %></p>
                <a class="btn btn-primary" href="/rabbits/<%=board._id%>">Read <%=board.title%></a>
            </div>
        </div>
    </div>
</div>
<% }%>