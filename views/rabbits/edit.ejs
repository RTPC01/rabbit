<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit Board</h1>
    <div class="col-6 offset-3">
        <form action="/rabbits/<%=board._id%>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="board[title]" required
                    value="<%=board.title %>">
            </div>
            <div class="mb-5">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description"
                    name="board[description]" required><%= board.description%></textarea>
                <div class="invalid-feedback">Invalid Input
                </div>            
            </div>
            <div class="mb-5">
                <div class="form-file custom-file">
                    <input type="file" class="form-file-input" id="image" name="image" multiple>
                    <label class="form-file-label" for="image">
                        <span class="form-file-text custom-file-label">Add image</span>
                        <span class="form-file-button">Find image</span>
                    </label>
                </div>
            </div>

            <div class="mb-3">
                <% board.images.forEach(function(img, i) {  %>
                <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="">
                <div class="form-check-inline">
                    <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                </div>
                <label for="image-<%=i%>">Check to Delete</label>
                <% })%>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Edit Board</button>
            </div>
        </form>
        <a href="/rabbits/<%= board._id%>">Back To RabbitBoard</a>

    </div>
</div>